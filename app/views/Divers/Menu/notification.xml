<Alloy>
	<Window>
		<View id="container" class="background vlayout">
			<Widget src="customNavBar" id="navBar" class="navBar" onLeftButtonClick="pressBack"></Widget>
			<View>
                <Widget src="customIndicatorInsideView" id="customIndicator"></Widget>
                <View id="emptyList" class="hSize">
                    <Label class="fontlight" text="L('notifications_empty_list')"></Label>
                </View>
                <ListView id="notificationsList" class="noBackground" onItemclick="onItemClick" onMarker="onMarkerReached">
                    <Templates>
                        <ItemTemplate name="notifTemplate" class="noBackground">
                            <View class="vlayout hSize">
                                <View class="itemContainer hlayout hSize">
                                    <View class="iconContainer hSize">
                                        <ImageView bindId="icon"></ImageView>
                                    </View>
                                    <View class="contentContainer vlayout hSize">
                                        <Label class="contentItem title" bindId="title"></Label>
                                        <Label class="contentItem fontmedium" bindId="type"></Label>
                                        <Label class="contentItem fontlight" bindId="num"></Label>
                                        <Label class="fontlightSmall right" bindId="date"></Label>
                                    </View>
                                </View>
                                <ImageView class="hSize" image="/images/line_separation_grey.png"></ImageView>
                            </View>
                        </ItemTemplate>
                    </Templates>
                    <ListSection id="notifSection"></ListSection>
                </ListView>
            </View>
		</View>
	</Window>
</Alloy>
